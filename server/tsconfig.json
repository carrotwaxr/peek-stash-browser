{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@peek/shared-types": ["../shared/dist/index.d.ts"],
      "@peek/shared-types/*": ["../shared/dist/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "tests", "integration", "**/*.test.ts", "**/__tests__"]
}
