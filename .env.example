# Database Configuration (SQLite)
DATABASE_URL=file:./data/peek-db.db

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# Stash Configuration
STASH_DATA_DIR=/path/to/your/stash/data
STASH_URL=http://your.stash.url/graphql
STASH_API_KEY=your_stash_api_key

# Application Configuration
TMP_DIR=/path/to/temp/peek

# SMB/CIFS Configuration (for Docker volume mounting)
SMB_USERNAME=your_smb_username
SMB_PASSWORD=your_smb_password